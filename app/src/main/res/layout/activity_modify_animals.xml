    <ImageButton
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/ic_person" />


    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:background="@drawable/gray_button_boarder"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_button_boarder"
                android:hint="Name (Required)"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:textSize="20sp"
                android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:background="@drawable/gray_button_boarder"
                    android:text="Description"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/etdescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_button_boarder"
                    android:hint="Description (Required)"
                    android:paddingBottom="10sp"
                    android:paddingLeft="20sp"
                    android:paddingTop="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:background="@drawable/gray_button_boarder"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:text="Habitat"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ethabitat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_button_boarder"
                    android:hint="Habitat (Optional)"
                    android:paddingBottom="10sp"
                    android:paddingLeft="20sp"
                    android:paddingTop="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:background="@drawable/gray_button_boarder"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:text="Category"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/scategory"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_button_boarder"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/media_player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_button_boarder"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/media_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPlay"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/green_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />

            <ImageButton
                android:id="@+id/btnPause"
                android:src="@drawable/ic_pause"
                android:background="@drawable/yellow_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />

            <ImageButton
                android:id="@+id/btnStop"
                android:src="@drawable/ic_stop"
                android:background="@drawable/red_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
